<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRequests.Views.AboutPage"
             Title="О приложении"
             BackgroundImageSource="background_image.jpg">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Стиль для всех карточек на странице -->
            <Style x:Key="CardFrame" TargetType="Frame">
                <Setter Property="Padding" Value="15"/>
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="CornerRadius" Value="10"/>
                <!-- Скругляем углы для современного вида -->
                <Setter Property="Margin" Value="0,0,0,10"/>
                <Setter Property="BackgroundColor" Value="White"/>
            </Style>

            <!-- Стиль для заголовков внутри карточек -->
            <Style x:Key="HeaderLabel" TargetType="Label">
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="FontSize" Value="Medium"/>
                <!-- Увеличенный шрифт для заголовков -->
                <Setter Property="Margin" Value="0,0,0,5"/>
            </Style>

            <!-- Стиль для обычного текста -->
            <Style x:Key="BodyLabel" TargetType="Label">
                <Setter Property="LineBreakMode" Value="WordWrap"/>
                <Setter Property="FontSize" Value="Small"/>
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>


    <ScrollView>
        <StackLayout Padding="15" Spacing="5">

            <Frame Style="{StaticResource CardFrame}">

                <Label Style="{StaticResource BodyLabel}">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Мониторинг заявок&#x0a;" FontAttributes="Bold" FontSize="20"/>
                            <Span Text="&#x0a;" FontAttributes="Bold" FontSize="16"/>
                            <Span Text="Система для обработки и мониторинга заявок. Удобный интерфейс и безопасное локальное хранение"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </Frame>



            <Frame Style="{StaticResource CardFrame}">
                <StackLayout>
                    <Label Text="Основные возможности:" Style="{StaticResource HeaderLabel}" />

                    <Label Text="• Проверка корректности введённых данных" Style="{StaticResource BodyLabel}"/>
                    <Label Text="• Добавление новых заявок и их редактирование" Style="{StaticResource BodyLabel}"/>
                    <Label Text="• Интуитивный ввод и управление" Style="{StaticResource BodyLabel}"/>
                    <Label Text="• Сохранение информации в локальной базе" Style="{StaticResource BodyLabel}"/>
                </StackLayout>
            </Frame>

            <Frame Style="{StaticResource CardFrame}">
                <StackLayout>
                    <Label Text="Требуется для заявки:" Style="{StaticResource HeaderLabel}" />
                    <Label Text="• Платформа" Style="{StaticResource BodyLabel}"/>
                    <Label Text="• ФИО" Style="{StaticResource BodyLabel}"/>
                    <Label Text="• Количество денег" Style="{StaticResource BodyLabel}"/>
                    <Label Text="• Телефон" Style="{StaticResource BodyLabel}"/>
                    <Label Text="• Название программы" Style="{StaticResource BodyLabel}"/>
                </StackLayout>
            </Frame>


            <Frame Padding="15" BackgroundColor="#2196F3" HasShadow="True" CornerRadius="10">
                <StackLayout>
                    <Label Text="Связаться с нами" Style="{StaticResource HeaderLabel}" TextColor="White" />

                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Label Text="📞" VerticalOptions="Center"/>
                        <Label Text="+7 (999) 888-77-66" TextColor="White" Style="{StaticResource BodyLabel}" VerticalOptions="Center"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Label Text="✉️" VerticalOptions="Center"/>
                        <Label Text="data@supportapp.com" TextColor="White" Style="{StaticResource BodyLabel}" VerticalOptions="Center"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Label Text="📍" VerticalOptions="Center"/>
                        <Label Text="Москва, ул. Программная, 47" TextColor="White" Style="{StaticResource BodyLabel}" VerticalOptions="Center"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Label Text="⏰" VerticalOptions="Center"/>
                        <Label Text="Пн–Пт 09:00–18:00" TextColor="White" Style="{StaticResource BodyLabel}" VerticalOptions="Center"/>
                    </StackLayout>

                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>
</ContentPage>